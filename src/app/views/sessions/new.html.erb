<% provide(:title, 'ログイン') %>

<h1>ログイン</h1>

<%= form_with(url: sessions_path, data: {turbo: false}) do |form| %>

  <div class="custom-form">
    <div>
      <%= form.label :name_id, 'ログインID', class: "custom-label" %>
      <%= form.text_field :name_id, value: @name_id, class: "custom-input" %>
    </div>

    <div>
      <%= form.label :password, 'パスワード', class: "custom-label" %>
      <%= form.password_field :password, class: "custom-input" %>
    </div>
  </div>
  <br />
  <div class="custom-button">
    <%= form.submit 'ログイン' %>
  </div>
<% end %>


