<% provide(:title, 'プロフィール編集') %>

<h1>プロフィール編集</h1>

<%= form_with(model: @account, url: account_path(@account.name_id), data: {turbo: false}) do |form| %>
  <%= render 'shared/error_messages', instead: @account %>

  <div>
    <%= form.label :name, '名前', class: "custom-label" %>
    <%= form.text_field :name, class: "custom-input" %>
  </div>

  <div>
    <%= form.label :name_id, 'ID', class: "custom-label" %>
    <%= form.text_field :name_id, class: "custom-input" %>
  </div>

  <div>
    <%= form.label :description, 'あなたを説明', class: "custom-label" %>
    <%= form.text_area :description, class: "custom-textarea" %>
  </div>

  <div>
    <%= form.label :birth, '生まれ', class: "custom-label" %>
    <%= form.datetime_field :birth %>
  </div>

  <div>
    <%= form.label :email, 'メール', class: "custom-label" %>
    <%= form.text_field :email, class: "custom-input" %>
  </div>

  <div>
    <%= form.label :phone, '電話番号', class: "custom-label" %>
    <%= form.text_field :phone, class: "custom-input" %>
  </div>
  <div class="custom-button">
    <%= form.submit '更新' %>
  </div>
<% end %>

